{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "ng serve",
            "options": {
                "cwd": "${workspaceFolder}/initiate.angular"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "_____"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Angular Live Development.*$",
                    "endsPattern": "^.*Compiled successfully*$"
                },
            }
        }
    ]
}